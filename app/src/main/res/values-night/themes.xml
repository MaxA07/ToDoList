<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/gray_blue</item>

        <!-- Customize your theme here. -->
        <item name="background">@color/gray</item>
        <item name="materialButtonStyle">@style/nightModeButton</item>
        <item name="cardViewStyle">@style/cardViewStyle</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="nightModeButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">26dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">22sp</item>>
    </style>

    <style name="cardViewStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>